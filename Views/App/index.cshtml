
@model IEnumerable<SecondBike.ViewModels.AdvertisementViewModel>

@{
    ViewBag.Title = "Home Page";
}


<h1>All Ads</h1>

<p>Count: @Model.Count()</p>

@if (Model.Count() > 0)
{
    <div class="row row-eq-height">
        @foreach (var a in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@a.Title</h5>
                        <p class="card-text">@a.Description.</p>
                        @*<p><span class="small">Hoofdcategorie: @a.Category.MainCategory.Name</span></p>
                        <p><span class="small">Subcategorie: @a.Category.Name</span></p>*@
                        <a asp-controller="Advertisements" asp-action="Details" asp-route-id="@a.AdvertisementId" class="btn btn-primary">Check</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No ads to show, place the very first ad!</p>
}